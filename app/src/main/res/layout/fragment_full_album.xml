<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_full_album">

    <data>
        <variable
            name="viewModel"
            type="com.vrrv.musicplayer.ui.fullalbum.FullAlbumViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/home_title"
            layout="@layout/layout_title"
            app:isHome="@{false}"
            app:isPodcast="@{false}"
            app:text="@{viewModel.album.name}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_x4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrl_full_album"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/unit_x6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/playing_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/album_image"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_album"
                    style="@style/Theme.Soul.Header"
                    android:textColor="@color/primary_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/unit_x2"
                    android:layout_marginLeft="@dimen/unit_x2"
                    android:layout_marginTop="@dimen/unit_x4"
                    android:layout_marginEnd="@dimen/unit_x2"
                    android:layout_marginRight="@dimen/unit_x2"
                    android:text="@{viewModel.album.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/album_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist_play"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/unit_x2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_album"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_artist"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/unit_x4"
                        android:layout_marginStart="@dimen/unit_x4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_artist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_x2"
                            android:text="@{viewModel.album.artist}"
                            style="@style/Theme.Soul.Title" />

                        <TextView
                            android:id="@+id/txt_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/unit_x2"
                            android:text="@{viewModel.year}"
                            style="@style/Theme.Soul.Title"
                            android:textColor="@color/secondary_text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_button"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:layout_marginTop="@dimen/unit_x4"
                        android:paddingLeft="@dimen/unit_x4"
                        android:paddingRight="1dp"
                        android:layout_marginRight="@dimen/unit_x4"
                        android:layout_marginEnd="@dimen/unit_x4"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/unit_x4"
                        android:paddingEnd="1dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img_play"
                            android:src="@drawable/ic_baseline_play_circle_outline_24"
                            android:layout_weight="1"
                            app:layout_constraintRight_toLeftOf="@+id/img_shuffle"
                            app:layout_constraintTop_toBottomOf="@+id/txt_artist"
                            app:tint="@color/white"
                            android:contentDescription="@string/information"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img_shuffle"
                            android:src="@drawable/ic_baseline_shuffle_24"
                            android:layout_weight="1"
                            app:layout_constraintRight_toLeftOf="@+id/img_download"
                            app:layout_constraintTop_toBottomOf="@+id/txt_artist"
                            app:tint="@color/white"
                            android:contentDescription="@string/information" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img_download"
                            android:src="@drawable/ic_baseline_arrow_circle_down_24"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_artist"
                            app:tint="@color/white"
                            android:contentDescription="@string/information"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_songs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_marginTop="@dimen/unit_x5"
                    tools:listitem="@layout/layout_song"
                    tools:itemCount="3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/artist_play"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/playing_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_playing"
            app:song="@{viewModel.playingSong.name}"
            app:artist="@{viewModel.playingSong.artists}"
            app:image="@{viewModel.playingSong.image}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>