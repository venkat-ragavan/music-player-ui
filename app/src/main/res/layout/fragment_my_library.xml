<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.vrrv.musicplayer.ui.mylibrary.MyLibraryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/library_title"
            layout="@layout/layout_title"
            app:isHome="@{true}"
            app:isPodcast="@{false}"
            app:text="@{@string/title_my_library}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_x4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit_x4"
            android:layout_marginRight="@dimen/unit_x4"
            app:tabTextColor="@color/secondary_text"
            app:tabRippleColor="@color/primary_variant_green"
            app:tabTextAppearance="@style/Theme.Soul.Tab"
            app:tabIndicatorGravity="bottom"
            app:tabSelectedTextColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/library_title">

        </com.google.android.material.tabs.TabLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_library_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_x2"
            android:layout_marginLeft="@dimen/unit_x4"
            android:layout_marginRight="@dimen/unit_x4"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:itemCount="3"
            tools:listitem="@layout/layout_album_view"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/unit_x2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:visibility="gone"
            tools:itemCount="3"
            tools:listitem="@layout/layout_song"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

        <include
            android:id="@+id/library_play_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_playing"
            app:song="@{viewModel.playingSong.name}"
            app:artist="@{viewModel.playingSong.artists}"
            app:image="@{viewModel.playingSong.image}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
