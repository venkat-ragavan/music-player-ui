<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soul" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_variant_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_green</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_green</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/tahoma</item>
    </style>

    <style name="Theme.Soul.Header" parent="Theme.Soul">
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Soul.Title" parent="Theme.Soul">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/tahoma</item>
    </style>

    <style name="Theme.Soul.Subtitle" parent="Theme.Soul">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/tahoma</item>
    </style>

    <style name="Theme.Soul.Tab" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/tahoma</item>

    </style>

</resources>